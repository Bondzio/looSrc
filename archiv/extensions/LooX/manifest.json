{
  "manifest_version": 2,
  "name": "LooX",
  "description": "Only in development, no public use possible",
  "version": "1.0",

  "permissions": [
    "http://*/",
    "https://*/",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": ["biudUfe.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}